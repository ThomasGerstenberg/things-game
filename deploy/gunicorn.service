# /etc/systemd/system/gunicorn.service

[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=ec2-user
Group=www-data
WorkingDirectory=/home/ec2-user/things-game
ExecStart=/home/ec2-user/dev/things-game/.env/bin/gunicorn --access-logfile - --worker-class eventlet --workers 1 server:app

[Install]
WantedBy=multi-user.target
